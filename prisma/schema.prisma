// Paris â†’ Tallinn Race - Prisma schema
// PostgreSQL (Neon, etc.). Set DATABASE_URL in Vercel and locally.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  emailVerified  DateTime?
  name           String?
  image          String?
  createdAt      DateTime  @default(now())
  creditsBalance     Int       @default(0)
  freePenaltyBalance Int       @default(0) // free punishments user can redeem
  hasSpunWheel       Boolean   @default(false)
  accounts           Account[]
  sessions       Session[]
  votes          Vote[]
  purchases      Purchase[]
  penaltiesBought Penalty[]  @relation("PurchasedBy")
  wheelSpin      WheelSpin?
  chatMessages   ChatMessage[]
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  body      String   // max length enforced in app
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([createdAt])
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires     DateTime
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@id([identifier, token])
}

// Stores username (name) when user signs up before clicking magic link
model PendingSignup {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  createdAt DateTime @default(now())
}

model Team {
  id              Int       @id
  name            String
  color           String    // hex e.g. #3B82F6
  lastLat         Float?
  lastLng         Float?
  lastUpdatedAt   DateTime?
  totalDistanceKm Float     @default(0) // total km traveled (from location updates)
  votes           Vote[]
  penalties       Penalty[]
  purchases       Purchase[]
}

model Vote {
  id        String   @id @default(cuid())
  userId    String
  teamId    Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([userId])
  @@index([teamId])
}

model PenaltyOption {
  id              String    @id @default(cuid())
  teamSpecific    Boolean   @default(false) // if true, buyer picks team
  title           String
  description     String?
  durationMinutes Float? // e.g. 15, 30, 0.5 for 30 seconds
  priceCents      Int
  type            String    // TIMEOUT, DETOUR, etc.
  createdAt       DateTime  @default(now())
  purchases       Purchase[]
  penalties       Penalty[]
}

model Purchase {
  id               String         @id @default(cuid())
  userId           String
  teamId           Int?           // null if credits-only purchase
  penaltyOptionId  String?
  amountCents      Int
  stripeSessionId  String?        @unique
  status           String         // PENDING, COMPLETED, FAILED
  createdAt        DateTime       @default(now())
  user             User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  team             Team?          @relation(fields: [teamId], references: [id])
  penaltyOption    PenaltyOption? @relation(fields: [penaltyOptionId], references: [id])
  penalty          Penalty?
}

model Penalty {
  id                String         @id @default(cuid())
  teamId            Int
  penaltyOptionId   String
  purchasedByUserId String
  startsAt          DateTime?
  enforcedAt        DateTime?
  status            String         // PENDING, ACTIVE, COMPLETED, CANCELLED
  purchaseId        String?        @unique
  extendedMinutes   Float?         @default(0) // extra minutes added when more pauses bought while active
  createdAt         DateTime       @default(now())
  team              Team           @relation(fields: [teamId], references: [id], onDelete: Cascade)
  penaltyOption     PenaltyOption  @relation(fields: [penaltyOptionId], references: [id])
  purchasedBy       User           @relation("PurchasedBy", fields: [purchasedByUserId], references: [id])
  purchase          Purchase?      @relation(fields: [purchaseId], references: [id])
}

model WheelSpin {
  id         String    @id @default(cuid())
  userId     String    @unique
  resultType String    // CREDITS, FREE_PENALTY, NOTHING, HALF_OFF_PENALTY
  value      Int       @default(0) // credits amount or 0
  redeemedAt DateTime? // when user used their prize (free or 50% off)
  createdAt  DateTime  @default(now())
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Race status stored in env or a simple key-value table; for simplicity we use a single RaceStatus model
model RaceStatus {
  id    String @id @default("default")
  status String @default("pre-race") // pre-race | live | finished
}

model WheelConfig {
  id          String @id @default("default")
  outcomesJson String // JSON array of { type, value, probability }
}
